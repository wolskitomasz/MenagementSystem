@page "/addcategory"

@inject NavigationManager NavigationManager
@inject UseCases.UseCaseInterfaces.IAddCategoryUseCase AddCategoryUseCase
@*dodatkowe usecases.use...*@

<h3>Add Category</h3>

@if (category != null)
{
    <EditForm Model="category" OnInvalidSubmit="OnValidSubmit">
        <DataAnnotationsValidator></DataAnnotationsValidator>
        <ValidationSummary></ValidationSummary>

        <div class="form-group">
            <label for="name">Name</label>
            <InputText id="name" @bind-Value="category.Name" class="form-control"></InputText>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <InputText id="description" @bind-Value="category.Description" class="form-control"></InputText>
        </div>
        @*dodtkowe onclick=onvalidsubmit*@
        <button type="submit" class="btn btn-primary" @onclick="OnValidSubmit">Save</button>
        <button type="button" class="btn btn-primary" @onclick="OnCancel">Cancel</button>
    </EditForm>
}
                
@code {
    private Category category;

    protected override void OnInitialized()
    {
        base.OnInitialized();

        category = new Category();
    }

    private void OnValidSubmit()
    {
        AddCategoryUseCase.Execute(category);
        NavigationManager.NavigateTo("/categories");
    }

    private void OnCancel()
    {
        NavigationManager.NavigateTo("/categories");
    }
}
